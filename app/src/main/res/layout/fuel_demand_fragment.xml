<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mooo.hairyone.td5tester.MainActivity"
    android:padding="1sp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="1sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gIDLE_DEMAND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_value="30"
                CircleProgressView:cpv_maxValue="60"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_unit="Idle"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_startAngle="90"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gDRIVER_DEMAND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_maxValue="60"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_startAngle="90"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_unit="Driver"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_value="30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gTORQUE_LIMIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_value="30"
                CircleProgressView:cpv_maxValue="60"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_unit="Torque"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_startAngle="90"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gSMOKE_LIMIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_value="30"
                CircleProgressView:cpv_maxValue="60"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_unit="Smoke"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_startAngle="90"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:padding="1sp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gMAF_AIR_MASS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_value="500"
                CircleProgressView:cpv_maxValue="1000"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_startAngle="90"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_unit="MAF"
                CircleProgressView:cpv_unitPosition="bottom" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gMAP_AIR_MASS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_value="500"
                CircleProgressView:cpv_maxValue="1000"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_startAngle="90"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_unit="MAP"
                CircleProgressView:cpv_unitPosition="bottom" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gINJECTION_QUANTITY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_value="30"
                CircleProgressView:cpv_maxValue="60"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_unit="IQ"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_startAngle="90" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/gAF_RATIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_value="10"
                CircleProgressView:cpv_maxValue="20"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_unit="AF"
                CircleProgressView:cpv_unitPosition="bottom"
                CircleProgressView:cpv_textMode="Value"
                CircleProgressView:cpv_startAngle="90" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
